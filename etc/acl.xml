<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Common_Blog::blog" title="Blog" translate="title" sortOrder="30">
                    <resource id="Common_Blog::blog_post" title="Blog Posts" translate="title" sortOrder="10"/>
                    <resource id="Common_Blog::blog_category" title="Blog Categories" translate="title" sortOrder="20"/>
                    <resource id="Common_Blog::blog_tag" title="Post Tags" translate="title" sortOrder="30"/>
                    <resource id="Common_Blog::blog_comment" title="Post Comments" translate="title" sortOrder="40"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
